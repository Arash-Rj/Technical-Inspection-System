@{
    Layout = null;
}
@using Src.Domain.Core.ManageRequest.Entities
@model Request
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Request Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Request Form</h2>
        <form asp-action="Index" method="post">
            <!-- User Field -->
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for=@Model.User.Name placeholder="Enter your name" required>
            </div>

            <div class="mb-3">
                <label for="NationalCode" class="form-label">NationalCode</label>
                <input type="text" class="form-control" asp-for=@Model.User.NationalCode id="NationalCode" placeholder="Enter your NationalCode" required>
            </div>

            <div class="mb-3">
                <label for="PhoneNumber" class="form-label">PhoneNumber</label>
                <input type="text" class="form-control" asp-for=@Model.User.PhoneNumber id="PhoneNumber" placeholder="Enter your PhoneNumber" required>
            </div>

            <div class="mb-3">
                <label for="Address" class="form-label">Address</label>
                <textarea class="form-control" id="Address" asp-for="@Model.User.Address" rows="4" placeholder="Enter your Address"></textarea>
            </div>

            <!-- Car Field -->
            <div class="mb-3">
                <label for="Model" class="form-label">Model</label>
                <select class="form-select" id="Model" asp-for="@Model.Car.Model">
                    <option selected>Choose Model...</option>
                    @{
                        int i = 0;
                    }
                    @foreach(var models in CarModels.Models)
                    {
                        int number =(int)models;
                        <option value="@number" required>@models</option>
                        i = i + 1;
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="Company" class="form-label">Company</label>
                <input type="tel" class="form-control" asp-for=@Model.Car.Company id="Company" placeholder="Enter your Company">
            </div>
            <div class="mb-3">
                <label for="LicensePlate" class="form-label">LicensePlate</label>
                <input type="text" class="form-control" asp-for=@Model.Car.LicensePlate id="LicensePlate" placeholder="Enter your LicensePlate">
            </div>

            @if (ViewBag.ErrorMessage is not null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
@*             <!-- Additional Fields -->
            <div id="additionalFields"></div>

            <!-- Add More Fields Button -->
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-secondary mb-3" id="addFieldBtn">Add More Fields</button>
            </div> *@

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>


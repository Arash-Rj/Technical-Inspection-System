@using Src.Domain.Core.ManageRequest.Entities
@using Src.Domain.Core.ManageRequest.Enums
@model List<Request>
<div class="table-responsive">
    <form asp-action="Index">
    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Order</label>
            <button class="btn btn-info" value="0" name="value" type="submit">
                Newest
            </button>
            <button class="btn btn-info" value="1" name="value" type="submit">
                Oldest
            </button>
    </div>
    </form>
    <table class="table table-striped table-hover table-bordered table-sm ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>National Code</th>
                <th>phone Number</th>
                <th>Car Manufacture Date </th>
                <th>Car Model</th>
                <th>Company</th>
                <th>Request Date</th>
                <th>Request Stat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var req in @Model)
            {
                <tr>
                    <th scope="row">@req.Id</th>
                    <td>@req.User.Name</td>
                    <td>@req.User.NationalCode</td>
                    <td>@req.User.PhoneNumber</td>
                    <td>@req.Car.ManufactureDate</td>
                    <td>@req.Car.Model</td>
                    <td>@req.Car.Company</td>
                    <td>@req.RequestDate</td>
                    <td>@req.Status</td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="ChangeRequestStat" asp-route-id="@req.Id" asp-route-status="@StatusEnum.Rejected">Reject</a>
                        <a class="btn btn-warning" asp-controller="Admin" asp-action="ChangeRequestStat" asp-route-id="@req.Id" asp-route-status="@StatusEnum.Success">Accept</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
